@using Classes_Compartilhadas.Models
@model IEnumerable<Categoria>

@{
    ViewData["Title"] = "Categorias";
    var temItens = Model?.Any() ?? false;
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-tags me-2"></i>Categorias
        </h2>
        <a asp-action="Create" class="btn btn-success rounded-pill shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Nova Categoria
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">
            @if (temItens)
            {
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.First().Nome)</th>
                            <th>@Html.DisplayNameFor(m => m.First().Descricao)</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm rounded-pill">
                                        <i class="bi bi-search"></i> Detalhes
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm rounded-pill text-white">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm rounded-pill">
                                        <i class="bi bi-trash"></i> Excluir
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    Nenhuma categoria cadastrada.
                </div>
            }
        </div>
    </div>
</div>
