@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary fw-bold">Bem-vindo à ConnectionCars</h1>
        <p class="lead">A melhor plataforma para comprar e vender carros, motos, peças e muito mais.</p>
        <a class="btn btn-primary btn-lg mt-3" href="/Produtos/Index">Ver Produtos</a>
    </div>

    <style>
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
    </style>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow rounded-4 h-100">
                <img src="https://blog.autocompara.com.br/wp-content/uploads/2024/06/carros-esportivos.jpeg" class="card-img-top rounded-top-4" alt="Carros">
                <div class="card-body">
                    <h5 class="card-title text-primary">Carros</h5>
                    <p class="card-text">Encontre veículos seminovos e clássicos com procedência garantida.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow rounded-4 h-100">
                <img src="https://motos2024.com.br/wp-content/uploads/2023/08/moto-honda-cbr-1000rr-r-fireblade-branco-perolizado-estacionada-na-pista_0-1-1024x523.webp" class="card-img-top rounded-top-4" alt="Motos">
                <div class="card-body">
                    <h5 class="card-title text-primary">Motos</h5>
                    <p class="card-text">Velocidade e estilo em duas rodas. Confira nossas ofertas de motocicletas.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow rounded-4 h-100">
                <img src="https://cobreq.com.br/wp-content/uploads/2024/02/importancia-pecas-qualidade-carro.jpg" class="card-img-top rounded-top-4" alt="Peças">
                <div class="card-body">
                    <h5 class="card-title text-primary">Peças</h5>
                    <p class="card-text">Tudo o que seu veículo precisa para rodar com segurança e performance.</p>
                </div>
            </div>
        </div>
    </div>
</div>
